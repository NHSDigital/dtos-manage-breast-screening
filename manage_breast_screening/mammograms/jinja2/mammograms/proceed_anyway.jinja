{% extends 'layout-form.jinja' %}
{% from 'nhsuk/components/warning-callout/macro.jinja' import warningCallout %}
{% from 'nhsuk/components/button/macro.jinja' import button %}
{% from "nhsuk/components/fieldset/macro.jinja" import fieldset %}

{% block form %}
  {{ warningCallout({
    "heading": "Clinical decision needed",
    "headingLevel": 2,
    "text": "Taking breast x-rays within 6 months of a previous mammogram should only be done when clinically necessary."
  }) }}

  <input type="hidden" name="return_url" value="{{ return_url }}">

  {{ form.reason_for_continuing.as_field_group() }}

  <div class="nhsuk-button-group">
    {{ csrf_input }}
    {{ button({
      "text": "Proceed with this appointment"
    }) }}
  </div>
{% endblock %}
