{% extends "layout-app.jinja" %}
{% from "nhsuk/components/button/macro.jinja" import button %}

{% block header %}
  {{ header({ "service": { "text": "Manage breast screening" }}) }}
{% endblock %}

{% block page_content %}
<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-two-thirds">
    <h1 class="nhsuk-heading-xl">Manage breast screening</h1>

    <p>Use this service to:</p>
    <ul>
      <li>See appointment information for breast screening clinics</li>
      <li>Check in participants and start appointments</li>
      <li>Record symptoms and medical history</li>
      <li>Record details of mammogram images</li>
    </ul>

    {{
      button({
        "classes": "nhsuk-button--login",
        "html": "Log in with my Care Identity",
        "href": url('auth:cis2_login')
      })
    }}

    <p>
      <a href="#">Contact us</a> if you have problems accessing this service.
    </p>
  </div>
</div>
{% endblock %}
